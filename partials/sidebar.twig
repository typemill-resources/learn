<div id="header-wrapper">
    <div id="header" class="logo">
      <a id="logo" href="{{ base_url }}">
		{% if logo %}
			<img src="{{base_url}}/{{ logo }}" class="logo-img"/>
		{% else %}
			{{ settings.title }}
		{% endif %}
      </a>
    </div>
    
    {% if widgets %}
		{% for index,widget in widgets %}
			<aside id="{{ index }}">
				{{ widget }}					
			</aside>
		{% endfor %}
	{% else %}
		<div class="searchbox">
		    <label for="search-by"><i class="fas fa-search"></i></label>			    
		    <input data-search-input="" id="search-by" type="search" placeholder="Search..." autocomplete="off">
		    <span data-search-clear=""><i class="fas fa-times"></i></span>
		</div>	
	{% endif %}
</div>
<div class="highlightable">
	<ul class="topics" id="navigation">
	    	{% include '/partials/navigation.twig' %}	
	</ul>
	<section id="shortcuts">
    	<h3>{% if true %}{{ shortcuts }}{% endif %}</h3>
    	<ul>
        {% for index,widget in widgets %}
            <li>
                <a class="padding" href="{{ url }}">{{ Name }}</a>
            </li>
        {% endfor %}
       	</ul>
    </section>
	<section id="footer">
		<p>Built with <a href="https://github.com/typemill/typemill"><i class="fas fa-heart"></i></a> from <a href="https://getgrav.org">Grav</a> and <a href="https://typemill.net">Typemill</a></p>
	</section>
</div>